{
    "$id": "https://example.com/schemas/treaties",
    "title": "Global Treaties",
    "type": "array",
    "items": {
        "type": "object",
        "properties": {
            "name": {
                "type": "string"
            },
            "signingDate": {
                "type": "string",
                "format": "date"
            },
            "status": {
                "type": "string",
                "enum": [
                    "Active",
                    "Violated",
                    "Expired"
                ]
            },
            "nationsInvolved": {
                "type": "array",
                "items": {
                    "type": "string"
                }
            },
            "treatyType": {
                "type": "string",
                "enum": [
                    "Peace",
                    "Economic",
                    "Military",
                    "Climate",
                    "Nuclear"
                ]
            }
        },
        "required": [
            "name",
            "signingDate",
            "status",
            "nationsInvolved",
            "treatyType"
        ]
    }
}